<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.lostFoundObject.LostObjectDetailsActivity">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_25sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            android:text="@string/ObjectFound" />
        <LinearLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="@dimen/_186sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:layout_weight="1"
                android:text="@string/dateOfFound"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/DateFound"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14ssp"
                android:gravity="center"
                android:background="#66B1BABA"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/FoundLocatin"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:layout_weight="1"
                android:text="@string/ObjectLocation"
                android:textSize="@dimen/_11ssp"
                android:textColor="@android:color/black"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:background="@drawable/custom_button_location"
                android:textAllCaps="false"
                />
            <EditText
                android:id="@+id/Location"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12ssp"
                android:singleLine="true"
                android:inputType="none"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                android:scrollbars="horizontal"
                android:gravity="center"
                />
            <ProgressBar
                android:layout_width="@dimen/_25sdp"
                android:layout_height="wrap_content"
                android:id="@+id/ProgressBar"
                android:visibility="gone"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_25sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            android:text="@string/TypeOfTheObject" />

        <LinearLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/PersonFound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/_14ssp"
                android:text="@string/Person"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/ObjectFound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/_14ssp"
                android:text="@string/Item"
                android:textAllCaps="false"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/FragmentFoundID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_20sdp"
            />
        <Button
            android:id="@+id/MatchFound"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/custom_button"
            android:text="@string/Match"
            android:textColor="#EFEDED"
            android:textSize="@dimen/_15ssp"/>
    </LinearLayout>
</ScrollView>