<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_300sdp"
    android:startColor="#FFEB3B"
    android:endColor="#FF9800"
    android:layout_gravity="center_horizontal"
    android:padding="@dimen/_30sdp"
    android:background="@drawable/background2"
    >
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView13"
        android:fontFamily="@font/muli_black"
        android:text="@string/find_your_missed"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#0F1010"
        android:textSize="@dimen/_20ssp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/muli_black"
        android:text="@string/item_easy"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_toRightOf="@id/imageView13"
        android:layout_marginStart="@dimen/_60sdp"
        android:textAllCaps="true"
        android:layout_below="@+id/textView4"
        android:textColor="#0F1010"
        android:textSize="@dimen/_20ssp"
  />
    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_150sdp"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_22sdp"
        app:srcCompat="@drawable/ic_baseline_phone_android_24" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_40sdp"
        app:srcCompat="@drawable/ic_baseline_search_241" />

</RelativeLayout>
</ScrollView>